<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// Place global declarations here.
chan press, choose, kickOut;
int money;
clock time;</declaration>
	<template>
		<name x="5" y="5">Vendor</name>
		<declaration>// Place local declarations here.</declaration>
		<location id="id0" x="-110" y="-51">
			<name x="-102" y="-76">Wait</name>
			<label kind="invariant" x="-136" y="-42">time&lt;=10</label>
		</location>
		<location id="id1" x="-110" y="-161">
			<name x="-120" y="-195">Idle</name>
		</location>
		<init ref="id1"/>
		<transition>
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="-204" y="-102">money&gt;=5</label>
			<label kind="synchronisation" x="-204" y="-119">choose?</label>
			<label kind="assignment" x="-204" y="-85">money=0</label>
			<nail x="-178" y="-51"/>
			<nail x="-178" y="-161"/>
		</transition>
		<transition>
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="-76" y="-127">time&gt;=8&amp;&amp;
money==0</label>
			<label kind="synchronisation" x="-76" y="-144">kickOut!</label>
			<nail x="-51" y="-51"/>
			<nail x="-51" y="-161"/>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="-136" y="-144">press?</label>
			<label kind="assignment" x="-136" y="-127">time=0</label>
		</transition>
	</template>
	<template>
		<name>Customer</name>
		<location id="id2" x="102" y="-110">
			<name x="110" y="-102">Decide</name>
		</location>
		<location id="id3" x="8" y="-110">
			<name x="17" y="-102">Order</name>
		</location>
		<location id="id4" x="102" y="-178">
			<name x="110" y="-170">Pay</name>
			<urgent/>
		</location>
		<init ref="id3"/>
		<transition>
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="25" y="-42">kickOut?</label>
			<nail x="102" y="-42"/>
			<nail x="8" y="-42"/>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="26" y="-195">choose!</label>
			<nail x="8" y="-178"/>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id4"/>
			<label kind="assignment" x="110" y="-144">money=5</label>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="34" y="-136">press!</label>
		</transition>
	</template>
	<system>// Place template instantiations here.
v = Vendor();
c = Customer();
// List one or more processes to be composed into a system.
system v,c;
    </system>
	<queries>
		<query>
			<formula></formula>
			<comment></comment>
		</query>
	</queries>
</nta>
